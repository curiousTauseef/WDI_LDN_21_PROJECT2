<p id="notice"><%= notice %></p>

<h1>Stations</h1>

<% if current_user.admin? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @stations.each do |station| %>
        <tr>
          <td><%= station.name %></td>
          <td><%= link_to 'Show', station %></td>
          <td><%= link_to 'Edit', edit_station_path(station) %></td>
          <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Station', new_station_path %>

<% else %>

  <div class="row">
    <% @stations.each do |station| %>
      <%if station.posts.length >= 1 %>
        <div class="col-md-4">
          <div class="thumbnail">
            <div class="caption">
              <h2>
                <a href="/stations/<%= station.id %>">
                  <%= station.name %>   
                </a>
              </h2>
              <% station.posts.each do |p| %>
                <p>
                  <a href="/posts/<%= p.id %>"><%= p.date_time.strftime("%m/%d/%Y") %> - <%= p.title %></a>
                </p>
              <% end %> 
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div >

  <% end %>
